---
import Layout from "../layouts/Layout.astro";
import Theme from "../components/Theme.astro";
import SContainer from "../components/SContainer.astro";
import Presentation from "../components/Presentation.astro";
import Skills from "../components/Skills.astro";
import Experience from "../components/Experience.astro";

const links = [
  { href: "https://github.com/alexisabels", icon: "GithubIcon", alt: "Github" },
  {
    href: "https://linkedin.com/alexisabel",
    icon: "LinkedInIcon",
    alt: "LinkedIn",
  },
  { href: "mailto:isabelsanchezalex@gmail.com", icon: "MailIcon", alt: "Mail" },
  { href: "../public/cv.pdf", icon: "CVIcon", alt: "CV" },
];
---

<Layout title="Bienvenido a mi portfolio!.">
  <main>
    <Theme />
    <SContainer>
      <Presentation
        name="Alejandro Isabel"
        description="Desarrollador de Aplicaciones Web"
        location="Toledo"
        imageUrl="./nueva.png"
        links={links}
      />
    </SContainer>

    <SContainer>
      <h1 class="text-5xl font-bold select-none dark:text-white text-gray-900">
        &lt;Experiencia Laboral /&gt;
      </h1>
      <Experience />
    </SContainer>

    <SContainer>
      <h1 class="text-5xl font-bold select-none dark:text-white text-gray-900">
        &lt;Skills /&gt;
      </h1>

      <Skills />
      <SContainer />
    </SContainer>
  </main>
</Layout>
