---
import JSIcon from "./icons/JSIcon.astro";

const SKILLS = [
  {
    name: "JavaScript",
    icon: JSIcon,
  },
];
---

<style>
  .skill-name {
    opacity: 0;
    transition: opacity 0.3s;
  }
  .skill-container:hover .skill-name {
    opacity: 1;
  }
</style>

<div class="container mx-auto mt-8 space-y-10">
  <div class="flex gap-8 flex-wrap justify-start">
    {
      SKILLS.map((skill) => (
        <div class="flex flex-col items-center skill-container">
          <div class="size-36 bg-white dark:bg-gray-700 rounded-md shadow-md flex items-center justify-center transition-transform transform hover:-translate-y-1 hover:shadow-lg">
            <skill.icon class="size-28" />
          </div>
          <p class="mt-2 text-center text-gray-800 dark:text-gray-200 text-md font-semibold skill-name">
            {skill.name}
          </p>
        </div>
      ))
    }
  </div>
</div>
