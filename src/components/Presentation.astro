---
import Links from "./Links.astro";
import MapIcon from "./icons/MapIcon.astro";

interface Props {
  name: string;
  description: string;
  location: string;
  imageUrl: string;
  links: Array<{ href: string; icon: string; alt: string }>;
}

const { name, description, location, imageUrl, links } = Astro.props;
---

<div
  class="container mx-auto flex flex-col md:flex-row items-center mt-20 space-y-6 md:space-y-0 md:space-x-10"
>
  <div
    class="md:flex-1 flex flex-col items-center md:items-start text-center md:text-left"
  >
    <div class="flex flex-col md:flex-row items-center md:items-start">
      <h1
        class="text-4xl bg-gradient-to-l from-indigo-500 via-red-500 to-blue-500 text-transparent bg-clip-text font-bold"
      >
        {name}
      </h1>
    </div>
    <p class="text-lg dark:text-white text-gray-950 mt-4">{description}</p>
    <div class="flex items-center mt-4 text-gray-600 dark:text-gray-300">
      <MapIcon class="size-6 mr-2" />
      <span>{location}</span>
    </div>
    <div class="mt-4">
      <Links {links} />
    </div>
  </div>
  <div class="md:w-48 w 32 h-auto">
    <img src={imageUrl} class="rounded-2xl object-cover" alt={name} />
  </div>
</div>
